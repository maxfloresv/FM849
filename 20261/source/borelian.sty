% Allow compilation from days/XX/ subdirectories
\makeatletter
\def\input@path{{../../}}
\makeatother
\graphicspath{{../../}{../../../}}

\mode<presentation>{
    \usetheme{default}
    \usecolortheme{borelian}
    \setbeamertemplate{navigation symbols}{}
    \setbeamertemplate{caption}[numbered]
    \setbeamertemplate{page number in head/foot}[totalframenumber]
    \setbeamertemplate{enumerate items}[circle]
    \setbeamertemplate{footline}{
        \hbox{%
        \begin{beamercolorbox}[wd=.9\paperwidth,ht=2.25ex,dp=1ex,center]{}%
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.25ex,dp=1ex,right]{page number in head/foot}%
            \usebeamerfont{page number in head/foot}%
            \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}%
        \end{beamercolorbox}}%
    }
    \addtobeamertemplate{block example begin}{}{\setlength{\parskip}{0.5em}}
    \addtobeamertemplate{block begin}{}{\setlength{\parskip}{0.5em}}
    \addtobeamertemplate{block alerted begin}{}{\setlength{\parskip}{0.5em}}
    \setbeamersize{
        text margin left=2em,
        text margin right=2em
    }
}


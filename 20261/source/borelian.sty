\mode<presentation>{
    \usetheme{default}
    \usecolortheme{borelian}
    \setbeamertemplate{caption}[numbered]
    \setbeamertemplate{page number in head/foot}[totalframenumber]
    \setbeamertemplate{footline}{
        \hbox{%
        \begin{beamercolorbox}[wd=.9\paperwidth,ht=2.25ex,dp=1ex,center]{}%
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.25ex,dp=1ex,right]{page number in head/foot}%
            \usebeamerfont{page number in head/foot}%
            \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}%
        \end{beamercolorbox}}%
    }
    \setbeamersize{
        text margin left=2em,
        text margin right=2em
    }
}


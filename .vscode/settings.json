{
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["ensure-tikz-cache", "latexmk", "move-pdf", "clean"]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "ensure-tikz-cache",
            "command": "powershell",
            "args": [
                "-Command",
                "if (-not (Test-Path '%DIR%/tikz-cache')) { New-Item -ItemType Directory -Path '%DIR%/tikz-cache' | Out-Null }"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ],
            "env": {
                "TEXINPUTS": ".;%WORKSPACE_FOLDER%/20261/source//;"
            }
        },
        {
            "name": "move-pdf",
            "command": "powershell",
            "args": [
                "-Command",
                "Move-Item -Path '%DIR%/%DOCFILE%.pdf' -Destination '%WORKSPACE_FOLDER%/20261/%DOCFILE%.pdf' -Force"
            ]
        },
        {
            "name": "clean",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path '%DIR%/*.aux','%DIR%/*.log','%DIR%/*.fls','%DIR%/*.fdb_latexmk','%DIR%/*.nav','%DIR%/*.snm','%DIR%/*.synctex.gz','%DIR%/*.vrb','%DIR%/*.toc','%DIR%/*.out','%DIR%/*.auxlock' -Force -ErrorAction SilentlyContinue; Remove-Item -Path '%DIR%/_minted*' -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path '%DIR%/*.data.minted','%DIR%/*.message.minted' -Force -ErrorAction SilentlyContinue"
            ]
        }
    ],
    "latex-workshop.latex.outDir": "%DIR%"
}
